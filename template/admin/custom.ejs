<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
</head>
<body>
<div class="page">
 <% include components/top.inc.ejs%>
 <div class="content-wrap">
     <div>
         <form action="?" method="post" enctype="multipart/form-data">
             标题：<input type="text" name="title" /><br>
             描述：<textarea name="description"></textarea><br>
             头像：<input type="file" name="f1" /><br>
             <input type="submit" value="添加"/>
         </form>
     </div>
     <table border="1" width="100%">
        <thead>
         <tr>
             <th>ID</th>
             <th>标题</th>
             <th>描述</th>
             <th>头像</th>
             <th width="10%">操作</th>
         </tr>
        </thead>
         <tbody>
         <%for(var i=0;i<evaluations.length;i++){%>
            <tr>
                <td><%=evaluations[i].ID%></td>
                <td><%=evaluations[i].title%></td>
                <td><%=evaluations[i].description%></td>
                <td>
                    <img width="32" height="32" src="/upload/<%=evaluations[i].src%>" alt="">
                    </td>
                <td>
                    <a href="?act=mod&id=<%=evaluations[i].ID%>">修改</a>
                    <a href="?act=del&id=<%=evaluations[i].ID%>" onclick="return confirm('确定要删除么')">删除</a>
                </td>
            </tr>
         <%}%>
         </tbody>
     </table>
     <div>
         <%if (typeof (mod_data)!='undefined'){%>
         <form action="?" method="post" enctype="multipart/form-data">
             <input type="hidden" name="mod_id" value="<%=mod_data.ID%>">
             标题：<input type="text" name="title" value="<%=mod_data.title%>"><br>
             描述：<textarea name="description" id="" cols="30" rows="10">
                 <%=mod_data.description%>
             </textarea><br>
             头像：<input type="file" name="f1">
             <input type="submit" value="修改">
             <a href="/admin/custom">取消修改</a>
         </form>
         <%}%>
     </div>
 </div>
</div>
</body>
</html>